{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [],
    "deny": []
  },
  "env": {},
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/projects/ai-config/scripts/notify.sh 'Claude Code' 'Task completed'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/projects/ai-config/scripts/notify.sh 'Claude Code' 'Awaiting your input'"
          }
        ]
      }
    ]
  }
}
